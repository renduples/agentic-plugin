<?xml version="1.0"?>
<ruleset name="Agent Builder">
    <description>WordPress Coding Standards for Agent Builder</description>

    <!-- What to scan -->
    <file>.</file>

    <!-- Exclude paths -->
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>
    <exclude-pattern>/library/*</exclude-pattern>
    <exclude-pattern>/assets/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.css</exclude-pattern>

    <!-- Use WordPress Coding Standards -->
    <rule ref="WordPress"/>

    <!-- Allow short array syntax -->
    <rule ref="Generic.Arrays.DisallowShortArraySyntax">
        <severity>0</severity>
    </rule>

    <!-- Text domain for i18n -->
    <config name="text_domain" value="agent-builder"/>

    <!-- Minimum PHP version -->
    <config name="testVersion" value="8.1-"/>

    <!-- Prefixes for naming -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="agentic"/>
                <element value="Agentic"/>
            </property>
        </properties>
        <!-- Exclude templates from global prefix requirement -->
        <exclude-pattern>/admin/*</exclude-pattern>
        <exclude-pattern>/templates/*</exclude-pattern>
        <exclude-pattern>uninstall.php</exclude-pattern>
    </rule>
</ruleset>
